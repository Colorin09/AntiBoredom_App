<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <include
        layout="@layout/appbar_without_tab"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="@string/fab_desc"
            android:text="Save Activity"
            android:textColor="@color/white"
            app:elevation="4dp"
            app:icon="@drawable/ic_baseline_icon_add"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/res_act_title"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:textColor="@color/darkGreen"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="10dp"/>

        <Button
            android:id="@+id/res_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:text="@string/tryAgain"
            android:textColor="@color/white"
            android:layout_below="@id/res_act_title"
            android:layout_centerHorizontal="true"/>

        <TableLayout
            android:id="@+id/res_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_part" />

                <TextView
                    android:id="@+id/res_no_part_tv"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pricing" />

                <TextView
                    android:id="@+id/res_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prep" />

                <TextView
                    android:id="@+id/res_prep_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/res_link_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Link" />

                <TextView
                    android:id="@+id/res_link_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>