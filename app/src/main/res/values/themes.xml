<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.Overlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/grey</item>
        <item name="android:progressTint">@color/blackGreen</item>
        <item name="android:colorControlActivated">@color/green</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/holo_orange</item>
        <item name="android:windowBackground">
            @drawable/splashscreen_file</item>
    </style>

</resources>